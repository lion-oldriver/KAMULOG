<div class="container">
  <div class="row">
    <div class="col-8">
      <h1>神社一覧</h1>
      <% @shrines.each do |shrine| %>
      <div class="card shadow p-0 mb-3">
        <% shrine.shrine_images.first(1).each do |image| %>
          <%= attachment_image_tag image, :image %>
        <% end %>
        <div class="card-body">
          <h5><%= link_to shrine.name, shrine_path(shrine) %></h5>
          <p><%= shrine.address %></p>
        </div>
        <ul class="list-group">
          <li class="list-group-item">
            <%= shrine.introduction.truncate(50) %>
          </li>
          <li class="list-group-item">
            <% shrine.gods.each do |god| %>
              <%= link_to god.god_name, search_path(content: god.god_name, model: 'god'), class:"text-reset" %>
            <% end %>
          </li>
          <li class="list-group-item">
            <% shrine.tags.each do |tag| %>
              <%= link_to tag.tag_name + "(#{tag.shrine.count})", search_path(content: tag.tag_name, model: 'tag'), class:"text-reset" %>
            <% end %>
          </li>
        </ul>
      </div>
      <% end %>
    </div>
    <div class="col-4"></div>
  </div>
</div>