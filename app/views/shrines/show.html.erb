<div class="container">
  <div class="row">
    <div class="col-7">
      <div class="card shadow p-0 mb-3">
        <div class="card-body d-flex justify-content-between">
          <h4><%= @shrine.name %></h4>
          <h3 id="bookmark_<%= @shrine.id %>">
            <%= render "bookmarks/bookmark", shrine:@shrine %>
          </h3>
        </div>
        <% @shrine.shrine_images.first(1).each do |image| %>
          <%= attachment_image_tag image, :image %>
        <% end %>
        <ul class="list-group">
          <li class="list-group-item">
            <%= @shrine.introduction %>
          </li>
          <li class="list-group-item">祭神：
            <% @shrine.gods.each do |god| %>
              <%= link_to god.god_name, search_path(content: god.god_name, model: 'god'), class:"text-reset" %>
            <% end %>
          </li>
          <li class="list-group-item">
            <% @shrine.tags.each do |tag| %>
              <%= link_to tag.tag_name + "(#{tag.shrine.count})", search_path(content: tag.tag_name, model: 'tag'), class:"text-reset" %>
            <% end %>
          </li>
        </ul>
          <!--%= @shrine.latitude %>-->
          <!--%= @shrine.longitude %>-->
      </div>
       <div id="map" style="width: 100%; height: 350px;">
        <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= ENV['API_KEY'] %>&callback=initMap" async defer></script>
      </div>
      <table class="table">
        <tbody>
          <tr>
            <th>住所</th>
            <td><%= @shrine.address %></td>
          </tr>
          <tr>
            <th>最寄り駅</th>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-5">
      <div><%= link_to '新規投稿', new_shrine_post_path(@shrine, @shrine.posts), class:"btn btn-sm btn-primary" %></div>
      <% @posts.each do |post| %>
        <div class="card">
          <%= link_to post.user.name, user_path(post.user) %>
          <p>参拝日：<%= post.visit_date.strftime("%Y年%m月%d日") %></p>
          <%= link_to shrine_post_path(post.shrine, post) do %>
            <div class="col-12 p-0 d-flex flex-wrap">
              <% post.post_images.each do |post_image| %>
                <%= attachment_image_tag post_image, :image, class:"w-50" %>
              <% end %>
            </div>
            <%= post.body.truncate(50) %>
          <% end %>
          <%= link_to '編集', edit_shrine_post_path(post.shrine, post), class:"btn btn-sm btn-success col-2" %>
          <%= link_to '削除', shrine_post_path(post.shrine, post), method: :delete, class:"btn btn-sm btn-danger col-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>