<div class="container py-3">
  <div class="row">
    <% breadcrumb :shrine, @shrine %>
    <div class="col-lg-7">
      <div class="card shadow p-0 mb-3">
        <div class="card-body d-flex justify-content-between">
          <h4><%= @shrine.name %></h4>
          <% if user_signed_in? %>
            <h3 id="bookmark_<%= @shrine.id %>">
              <%= render "bookmarks/bookmark", shrine:@shrine %>
            </h3>
          <% end %>
        </div>
        <div id="shrine-images">
          <% @shrine.shrine_images.each do |image| %>
            <%= attachment_image_tag image, :image , style:"width: 100%; height: auto;"%>
          <% end %>
        </div>
        <ul class="list-group">
          <li class="list-group-item">
            <%= @shrine.introduction %>
          </li>
          <li class="list-group-item">祭神:
            <% @shrine.gods.each do |god| %>
              <%= link_to god.god_name, search_path(content: god.god_name, model: 'god'), class:"text-reset" %>
            <% end %>
          </li>
          <li class="list-group-item">
            <% @shrine.tags.each do |tag| %>
              <%= link_to tag.tag_name + "(#{tag.shrine.count})", search_path(content: tag.tag_name, model: 'tag'), class:"tag text-reset" %>
            <% end %>
          </li>
        </ul>
      </div>
      <div id="map" style="width: 100%; height: 350px;"> <!--Google Mapを表示する-->
        <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= ENV['API_KEY'] %>&callback=initMap" async defer></script>
      </div>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>住所</th>
            <td><%= @shrine.address %></td>
          </tr>
          <tr>
            <th>近くの神社</th>
            <td>
              <% unless @near_shrine.length == 0 %> <!--近くの神社の配列内にデータが存在するか判断-->
                <ul class="list-unstyled">
                  <% i = 0 %>
                  <% while i < @near_shrine.length do %>
                    <li>
                      <%= link_to @near_shrine[i][:name], shrine_path(@near_shrine[i][:id]) %>
                      <%= @shrine.distance_to(@near_shrine[i]).round(2) %>km
                      <% i += 1 %>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p>近くの神社がありません</p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-lg-5">
      <div class="d-flex mb-3">
        <h3 class="m-0">最近の投稿</h3>
        <%= link_to '投稿する', new_shrine_post_path(@shrine, @shrine.posts), class:"btn btn-sm btn-outline-success rounded-pill ml-3" %>
      </div>
      <% if @posts.exists? %>
        <% @posts.each do |post| %>
          <div class="card p-2 mb-2">
            <div class="card-header mb-1 d-flex justify-content-between">
              <%= link_to  user_path(post.user) do %>
                <%= attachment_image_tag post.user, :profile_image, :fill,35,35, class:"rounded-circle" %>
                <%= post.user.name %>
              <% end %>
              <small class="text-muted pt-2">参拝日:<%= post.visit_date.strftime("%Y年%m月%d日") %></small>
            </div>
            <%= link_to shrine_post_path(post.shrine, post), {class:"text-reset"} do %>
              <div class="col-12 p-0 d-flex flex-wrap">
                <% post.post_images.each do |post_image| %>
                  <%= attachment_image_tag post_image, :image, style:"width: 31%; margin: 0 1%;" %>
                <% end %>
              </div>
              <%= post.body.truncate(50) %>
            <% end %>
          </div>
        <% end %>
        <%= paginate @posts %>
      <% else %>
        <p>まだ投稿はありません</p>
      <% end %>
    </div>
  </div>
</div>