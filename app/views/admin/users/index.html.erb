<div class="container py-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h3>会員一覧</h3>
      <table class="table table-bordered table-hover mt-4">
        <thead>
          <tr>
            <th>ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.name, admin_user_path(user) %></td>
              <td><%= user.email %></td>
              <td>
                <% if user.is_deleted %>
                  <p class='text-secondary'>退会</p>
                <% else %>
                  <p class='text-success'>有効</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
