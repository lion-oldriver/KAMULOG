<% if user_signed_in? %>
  <% unless user == current_user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class:"btn btn-sm btn-outline-primary rounded-pill" %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-sm btn-outline-primary rounded-pill" %>
    <% end %>
  <% end %>
<% end %>